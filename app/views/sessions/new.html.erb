<body class="login-bg">
  <div class="container">
    <h1 class="text-center">Login</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_tag '/login' do %>
            Email: <%= text_field_tag :email, nil, class: 'form-control form-group' %>
            Password: <%= password_field_tag :password, nil, class: 'form-control form-group' %>
            <%= submit_tag "Login", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</body>