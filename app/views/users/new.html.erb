<body class="login-bg">
  <div class="container">
    <h1 class="text-center">Sign up!</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :user, url: '/users' do |f| %>
            Name: <%= f.text_field :name, class: 'form-control form-group' %>
            Email: <%= f.text_field :email, class: 'form-control form-group' %>
            Password: <%= f.password_field :password, class: 'form-control form-group' %>
            Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-control form-group' %>
            <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</body>