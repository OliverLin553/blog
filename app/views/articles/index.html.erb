<%= render 'public/menu' %>
<div class="container">
  <h2 class="text-center">Listing articles</h2>

  <div class="clearfix">
    <p class="text-right"><%= link_to 'Add', new_article_path %></p>
  </div>

  <div class="panel panel-default">
    <table class="table">
      <tr>
        <th>id</th>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>

      <% @articles.each do |article| %>
          <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= link_to 'Delete', article_path(article),
                            method: :delete, data: { confirm: '你确定吗?' } %></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
